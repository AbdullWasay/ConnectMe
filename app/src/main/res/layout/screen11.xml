<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/BackButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_icon"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OliviaD"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="12dp"/>


    </LinearLayout>

    <!-- Tabs (DMs & Requests) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- DMs Tab -->
        <LinearLayout
            android:id="@+id/FollowersTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Wrap TextView and Underline in another LinearLayout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tabFollowers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="410 Followers"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:paddingBottom="4dp"/>

                <!-- Underline only under text -->
                <View
                    android:id="@+id/tab_dms_underline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Requests Tab -->
        <LinearLayout
            android:id="@+id/FollowingTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="387 Following"
                android:textSize="18sp"
                android:textColor="#999999"
                android:gravity="center"
                android:paddingBottom="4dp"/>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <!-- Search Bar -->

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search"
            android:paddingHorizontal="12dp"
            android:background="@color/white"
            android:textSize="14sp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/search_icon"
            />

    </LinearLayout>
    <!-- Chat List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:id="@+id/followersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Followers will be added here programmatically -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
