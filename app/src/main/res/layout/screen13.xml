<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/DoneEditing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#59442F"/>
    </LinearLayout>

    <!-- Profile Image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profilepicture8"
                android:scaleType="centerCrop"
                android:alpha="0.6"
                android:clipToOutline="true"
                android:background="@drawable/story_circle"/>

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/camera_icon"
                android:layout_gravity="center"/>
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olivia Daniel"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Input Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#59442F"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_border"
            android:text="Olivia Daniel"
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="#908C8C"/>

        <!-- Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#59442F"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_border"
            android:text="OliviaD"
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="#908C8C"/>

        <!-- Contact Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#59442F"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_border"
            android:text="+42 7412 5443058"

            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="#908C8C"/>

        <!-- Bio -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="22dp"
            android:paddingHorizontal="10dp">

            <!-- Bio Label and Input in Horizontal Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#59442F"
                    android:layout_marginRight="10dp"/>

                <!-- Bio EditText with underline below -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Just an average 14 year old"
                            android:textColor="#5A3E28"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:paddingVertical="4dp" />

                        <!-- Underline only under the text -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#59442F"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>